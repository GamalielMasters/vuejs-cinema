{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "module": "es2015",
    "experimentalDecorators":  true,
    "emitDecoratorMetadata": true,

    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,

    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}